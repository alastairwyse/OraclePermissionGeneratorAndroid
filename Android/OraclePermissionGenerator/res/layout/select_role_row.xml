<?xml version="1.0" encoding="utf-8"?>
<!-- The layout for a row in the ListView in the select role activity -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:padding="@dimen/list_row_padding" 
    >
    
    <TextView
        android:id="@+id/select_role_row_role_name_field"
        android:layout_height="@dimen/role_list_row_role_name_field_height"
        android:layout_width="@dimen/role_list_row_role_name_field_width"
        android:fontFamily="serif"
        android:textColor="@color/list_row_main_text"
        android:textSize="@dimen/list_row_main_text_size"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
    </TextView>

</LinearLayout>
